{
	"git": {
		"requireBranch": "trunk",
		"commitMessage": "chore: release v${version}",
		"changelog": "npx auto-changelog --stdout --commit-limit false -u --template https://raw.githubusercontent.com/release-it/release-it/main/templates/changelog-compact.hbs"
	},
	"github": {
		"release": true,
		"assets": ["web/packages/hovercards/release/hovercards.zip"]
	},
	"npm": {
		"publish": true
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org"
	},
	"hooks": {
		"before:init": [
			"git pull",
			"cd web/packages/hovercards",
			"npm run build",
			"npm run clean:release",
			"mkdir -p release/hovercards",
			"cp -r dist/* release/hovercards",
			"(cd release; zip -r hovercards.zip hovercards/*)"
		],
		"after:bump": "npx auto-changelog -p",
		"after:release": "echo ðŸŽ‰ Successfully released ${name} v${version} to ${repo.repository}."
	}
}
